#==============================================================================#
#                                  MODULE 00                                   #
#==============================================================================#

NAME        = megaphone

#==============================================================================#
#                                FLAGS & COMMANDS                              #
#==============================================================================#

CPP         = c++
CPPFLAGS    = -Wall -Wextra -Werror -g
CPPFLAGS    += -std=c++98
RM          = rm -fr
MKDIR       = mkdir -p

#==============================================================================#
#                                    PATHS                                     #
#==============================================================================#

BUILD_PATH  = .build
SRC_PATH    = .
INC_PATH    = .
INCS        =
SRCS        = $(SRC_PATH)/megaphone.cpp
OBJS        = $(SRCS:$(SRC_PATH)/%.cpp=$(BUILD_PATH)/%.o)

#==============================================================================#
#                                    RULES                                     #
#==============================================================================#

all: $(NAME)

$(BUILD_PATH)/%.o: $(SRC_PATH)/%.cpp
	$(MKDIR) $(dir $@)
	$(CPP) $(CPPFLAGS) $(INCS) -c $< -o $@

$(NAME): $(OBJS)
	$(CPP) $(CPPFLAGS) $(OBJS) -o $(NAME)

#==============================================================================#
#                                CLEANING RULES                                #
#==============================================================================#

clean:
	$(RM) $(BUILD_PATH)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
